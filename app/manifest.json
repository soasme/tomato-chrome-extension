{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/oauth2/oauth2.js",
      "scripts/oauth2/oauth2_inject.js",
      "scripts/oauth2/oauth2_finish.js",
      "scripts/oauth2/adapters/tomato.js",
      "scripts/oauth2/adapters/tomatodev.js",
      "scripts/background/shared.js",
      "scripts/background/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "storage"
  ],
  "web_accessible_resources": [
    "oauth2.html",
    "scripts/oauth2/oauth2_inject.js",
    "scripts/oauth2/oauth2_finish.js"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": ["http://127.0.0.1:8000/chrome/extensions/success*"],
      "js": [
        "scripts/oauth2/oauth2_inject.js",
        "scripts/oauth2/oauth2_finish.js",
        "scripts/oauth2/adapters/tomatodev.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["https://tomato.today/chrome/extensions/success*"],
      "js": ["scripts/oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://book.douban.com/subject/*/*"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "bower_components/handlebars/handlebars.min.js",
        "scripts/background/shared.js",
        "scripts/api.js",
        "scripts/contentscript/douban.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Tomato",
    "default_popup": "popup.html"
  }
}
